{
  "name": "next-workflow-builder",
  "version": "0.1.0",
  "type": "module",
  "license": "Apache-2.0",
  "description": "A reusable Next.js plugin for visual workflow building with drag-and-drop, code generation, and AI-powered automation.",
  "main": "./dist/server/index.js",
  "types": "./dist/server/index.d.ts",
  "sideEffects": [
    "./dist/**/*.workflow.js",
    "./dist/**/*.step.js",
    "./dist/lib/steps/**/*.js",
    "./dist/styles/globals.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    },
    "./components": {
      "types": "./dist/client/components/index.d.ts",
      "import": "./dist/client/components/index.js"
    },
    "./hooks": {
      "types": "./dist/client/hooks/index.d.ts",
      "import": "./dist/client/hooks/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js",
      "default": "./dist/plugins/index.js"
    },
    "./styles/globals.css": "./dist/styles/globals.css",
    "./lib/api-client": {
      "types": "./dist/lib/api-client.d.ts",
      "import": "./dist/lib/api-client.js",
      "default": "./dist/lib/api-client.js"
    },
    "./lib/workflow-store": {
      "types": "./dist/lib/workflow-store.d.ts",
      "import": "./dist/lib/workflow-store.js",
      "default": "./dist/lib/workflow-store.js"
    },
    "./*": {
      "types": "./dist/client/*.d.ts",
      "import": "./dist/client/*.js"
    }
  },
  "bin": {
    "nwb": "./src/scripts/nwb.ts"
  },
  "files": [
    "dist",
    "src/scripts",
    "src/plugins"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --noCheck && node scripts/fix-esm-imports.mjs && mkdir -p dist/styles dist/client && cp src/styles/globals.css dist/styles/globals.css && echo '{\"sideEffects\":false}' > dist/client/package.json",
    "test": "vitest --typecheck",
    "types:check": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "next": ">=16",
    "react": ">=19",
    "react-dom": ">=19",
    "tsx": ">=4",
    "typescript": ">=5",
    "workflow": ">=4"
  },
  "dependencies": {
    "@ai-sdk/provider": "^1.0.0",
    "@inquirer/prompts": "^8.0.1",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@vercel/og": "^0.8.6",
    "@xyflow/react": "^12.0.0",
    "ai": "^5.0.0",
    "better-auth": "^1.4.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.36.0",
    "jotai": "^2.0.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.552.0",
    "motion": "^11.0.0",
    "nanoid": "^5.0.0",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "radix-ui": "^1.4.3",
    "react": "19.2.2",
    "react-dom": "19.2.2",
    "react-resizable-panels": "^3.0.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.2.0",
    "tw-animate-css": "^1.4.0",
    "vaul": "^1.1.2",
    "workflow": "4.1.0-beta.52",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.0.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
